// Modelo de Arquivo
model Arquivo {
  id            String    @id @default(cuid())
  nome          String
  caminho       String
  tipo          String
  tamanho       Int
  entidadeTipo  String    // 'modulo', 'medicamento', 'categoria', etc.
  entidadeId    String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
